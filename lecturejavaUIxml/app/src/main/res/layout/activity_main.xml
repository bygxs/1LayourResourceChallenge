<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_first"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        tools:text="Hello "
        android:layout_height="wrap_content"
        />
    <!-- change margin top in dimensins  resources  -->
    <Button
        android:id="@+id/button_1"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_margin"

        android:layout_height="wrap_content"
        android:text="click me!" />


    />
    <EditText
        android:id="@+id/input_field"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="skriv användare namn"
        android:inputType="textPersonName"
        />

    />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="skriv lösenord"
        android:inputType="textPassword"


        />
    <!--    tools:text="test text"    tools is a dummy text we use just to see
     how some design text looks like in the design
      it doesn't display in the app for real -->

    <!-- textAllCaps to false -->
    <Button
        android:id="@+id/button_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_margin"

        android:background="@color/material_dynamic_neutral30"
        android:text="Button LMA"
        android:textAllCaps="false"

        

        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="skriv nånting här"

        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="skriv nånting här nummer"
        android:inputType="number"


        />

</LinearLayout>